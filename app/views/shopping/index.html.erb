<div class="page-header">
  <h1>Shopping List</h1>
</div>

<div class="row">

  <div class="col-sm-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>
            Age
          </th>
          <th>
            Boys
          </th>
          <th>
            Girls
          </th>
          <th>
            Total
          </th>
        </tr>
      </thead>
      <tbody>
        <% for i in 0..@colsize-1 %>
        <tr>
          <td><%= i == 0 ? 'Months' : i %></td>
          <td><%= @boyarray[i] %></td>
          <td><%= @girlarray[i] %></td>
          <td><%= @girlarray[i] + @boyarray[i] %></td>  
        </tr>
        <% end %>
        <tr>
          <td>
            Totals
          </td>
          <td>
            <%= @boytotal %>
            
          </td>
          <td>
            <%= @girltotal %>
          </td>
          <td>
            <%= @boytotal + @girltotal %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
